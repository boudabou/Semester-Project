#!/bin/env bash

# $1: server
# $2: config.json
# $3: policies.json
# $4-n: additional options

defaulti=400

c=$2
cbase=${c##*/}
cbase=${cbase%.json}

p=$3
pbase=${p##*/}
pbase=${pbase%.json}

sname=e.$cbase.$pbase

options=${@:4}

cd ~/rv/dev/worklearn/; git pull;
ssh $1 "screen -dm -S $sname; screen -S $sname -p 0 -X stuff $'cd ~/dev/worklearn/\nworkon worklearn\npython exp.py --config $c --policies $p $options \n'";
